<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
</head>
<body>
    <div class="page">
        <header>
            <div id="title">
                <h1>
                    Livraria São João</h1>
            </div>
            <div id="logindisplay">
                @Html.Partial("_LogOnPartial")
            </div>
            <nav>
                <ul id="menu">
                
                    <li>@Html.ActionLink("Principal", "Index", "Home")</li>
                    <li>@Html.ActionLink("Cliente", "Index", "Pessoa")</li>                  
                    <li>@Html.ActionLink("Endereço", "Index", "Endereco")</li>
                    <li>@Html.ActionLink("Bairro", "Index", "Bairro")</li>
                    <li>@Html.ActionLink("Cidade", "Index", "Cidade")</li>
                    <li>@Html.ActionLink("Estado", "Index", "UnidadeFederativa")</li>
                    <li>@Html.ActionLink("Logradouro", "Index", "TipoLogradouro")</li>
                    <li>@Html.ActionLink("Telefone", "Index", "Telefone")</li>
                </ul>
            </nav>
        </header>
        <section id="main">
            @RenderBody()
        </section>
        <footer>
        </footer>
    </div>
</body>
</html>
