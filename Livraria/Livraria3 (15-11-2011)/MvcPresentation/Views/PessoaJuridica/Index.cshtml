@model IEnumerable<Livraria.Modelo.PessoaJuridica>

@{
    ViewBag.Title = "Empresas";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Novo", "Create")
</p>
<table>
    <tr>
        <th>
            Cnpj
        </th>
        <th>
            Nome Fantasia
        </th>
        <th>
            Razão Social
        </th>
        <th>
            IE
        </th>
        <th>
            IM
        </th>
        <th>
            Email
        </th>
        <th>
            Observação
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Cnpj)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NomeFantasia)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RazaoSocial)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IE)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IM)
        </td>
